<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>src/main</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.sh</include>
				<include>*.bat</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/classes</directory>
			<outputDirectory>/conf</outputDirectory>
			<includes>
				<include>*.properties</include>
				<include>*.xml</include>
				<include>*.me</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>